{
  "extends": "../../tsconfig.base.json", // ✅ يفضل تخليه موجود زي ما هو
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"],
    "baseUrl": ".", // ✅ أضف دي عشان `paths` تشتغل
    "paths": {
      "@services/*": ["../../libs/services/*"] // ✅ خليه يخرج لفوق لو الملف داخل app/module
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts"
, "../app/libs/services/products/src/lib/index.ts", "../app/libs/services/products/src/lib/api.ts"  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
